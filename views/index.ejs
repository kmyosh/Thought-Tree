<div class="card-container">
  <% thoughts.forEach(function(t){ %>
  <div class="card blue-grey">
    <div class="card-content black-text">
      <div>
        <span class="card-title">
          <span class="thoughts"> <%= t.thought %> <%= t.createdAt %> </span>
        </span>
      </div>
    </div>
  </div>
  <% }) %>
</div>

