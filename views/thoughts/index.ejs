<%- include('../partials/header.ejs') %>
<div class="card-container">
  <% if (user){ %> <% thoughts.forEach(function(t){ %>
  <div class="card z-depth-0">
    <div class="card-content">
      <div>
        <span class="card-title">
          <span class="thoughts">
            <label class="username"> <%=user.name%>'s</label>
            <br />
            <span class="thoughts"> "<%= t.thought %>" </span>
            <br />
            <span class="timestamp"> <%= t.createdAt %> </span>
          </span>
        </span>
      </div>
    </div>
  </div>
  <% }) %> <% } %>
</div>
<%-include('views/thoughts/index.ejs');%>
<%-include('../partials/footer.ejs');%>
