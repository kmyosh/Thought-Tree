<%- include('../partials/header.ejs') %>
<div class="card-container">
  <% if (user){ %> <% thoughts.forEach(function(t){ %>
  <div class="card z-depth-0">
    <div class="card-content">
      <div>
        <span class="card-title">
          <span class="thoughts">
            <label class="username"> <%=user.name%>'s</label>
            <br />
            <span class="thoughts-text"> "<%= t.thought %>..." </span>
            <br />
            <span class="timestamp"> <%= t.createdAt %> </span>
            <a href="/ideas/saadsays?thoughtId=<%=t._id%>">New Idea</a>
            <div class="idea">
              <ul>
                <%t.idea.forEach(i => { %>
                <li>...<%=i.idea %></li>
                <% }) %>
              </ul>
            </div>
          </span>
        </span>
        <div class="idea-form"></div>
      </div>
    </div>
  </div>
  <% }) %> <% } %>
</div>

<%-include('../partials/footer.ejs');%>
