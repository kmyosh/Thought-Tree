<%- include('../partials/header.ejs') %>
<div class="card-container">
  <% thoughts.forEach(function(t){ %>
  <div class="card z-depth-0">
    <div class="card-content">
      <div>
        <span class="card-title">
          <span class="thoughts">
            <label class="username"> <%=user.name%>'s</label>
            <br />
            <span class="thoughts"> "<%= t.thought %>" </span>
            <br />
            <span class="timestamp"> <%= t.createdAt %> </span>
            <input type="checkbox" name="select" /><%t.select %>
          </span>
        </span>
      </div>
    </div>
  </div>
  <% }) %>
</div>

<!-- list of thoughts display here -->
